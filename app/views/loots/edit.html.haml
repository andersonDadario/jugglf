:javascript
  $(document).ready(function() {
    $('#loot_item_name').autocomplete('/search/items.ac', {
      minChars: 2,
      autoFill: true
    });
    $('#loot_member_name').autocomplete('/search/members.ac', {
      minChars: 1,
      autoFill: true
    });
  });
%h2= breadcrumb link_to('Loot', loots_path), 'Edit'
%fieldset
  - form_for @loot do |f|
    - unless f.error_messages.empty?
      .error= f.error_messages
      
    = render :partial => "form", :object => f
    
    .buttons
      = styled_button(:type => 'submit', :text => 'Save', :image => 'tick.png')
      = styled_button(:type => 'reset', :image => 'form_delete.png')
      = link_to_delete(:path => loot_path(@loot))