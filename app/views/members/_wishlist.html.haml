:javascript
  $(document).ready(function() {
    sortWishlistTable();
    $('.help').tooltip({ showURL: false });
  });
%table#wishlists.ipb_table.tablesorter
  %thead
    %tr
      %th.icon &nbsp;
      %th Item
      %th Priority
      %th Note
      %th Slot
      %th.image &nbsp;
  %tbody#wishlist
    - @wishlists.each do |wishlist|
      = render :partial => "wishlists/wishlist_row", :object => wishlist, :locals => { :recent_loots => @recent_loots }
%br
#wishlist-edit{ :style => "display: none" }
= render :partial => 'wishlists/form_inline'