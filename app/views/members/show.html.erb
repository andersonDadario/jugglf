<h2><%=h @member.name %></h2>

<h3>Raids</h3>

<table border="0" cellspacing="0" cellpadding="0">
  <thead>
  <tr>
    <th>Date</th>
    <th>Attendance</th>
    <th>Note</th>
    <th>Thread</th>
  </tr>
  </thead>
  
  <tbody>
  <% for raid in @raids %>
    <tr class="<%= cycle('row1','row2') %>">
      <td><%= link_to h(raid.date), raid_path(raid) %></td>
      <td></td>
      <td><%=h raid.note %></td>
      <td><%=h raid.thread %></td>
    </tr>
  <% end %>
  </tbody>
  
  <tfoot>
    
  </tfoot>
</table>