<h2><%=h @member.name %></h2>

<h3>Raids</h3>

<table border="0" cellspacing="0" cellpadding="0">
  <thead>
  <tr>
    <th>Date</th>
    <th class="right">Attendance</th>
    <th>Note</th>
    <th class="center">Thread</th>
  </tr>
  </thead>
  
  <tbody>
  <% for attendee in @member.attendees %>
    <tr class="<%= cycle('row1','row2') %>">
      <td><%= link_to h(attendee.raid.date), raid_path(attendee.raid) %></td>
      <td class="right"><%= number_with_precision(attendee.attendance, :precision => 2) %></td>
      <td><%=h attendee.raid.note %></td>
      <td class="center"><%=h attendee.raid.thread %></td>
    </tr>
  <% end %>
  </tbody>
  
  <tfoot>
    
  </tfoot>
</table>