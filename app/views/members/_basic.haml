%table.list
  %thead{ :style => "max-height: 0.5em" }
    %tr
      %th{ :colspan => '6', :style => "line-height: 0.1em" } &nbsp;
  %tbody
    %tr
      %th.right{ :style => "width: 15%" } 30-Day
      %td.attendance= member_attendance_colored(@member.attendance_30)
      %td= progress_bar(@member.attendance_30 * 100, :container_width => 75)
    %tr
      %th.right 90-Day
      %td.attendance= member_attendance_colored(@member.attendance_90)
      %td= progress_bar(@member.attendance_90 * 100, :container_width => 75)
    %tr
      %th.right Lifetime
      %td.right{ :style => "width: 20%" }= member_attendance_colored(@member.attendance_lifetime)
      %td= progress_bar(@member.attendance_lifetime * 100, :container_width => 75)
    %tr
      %th.right Normal LF
      %td.number= number_with_precision(@member.lf, :precision => 2)
    %tr
      %th.right Best in Slot LF
      %td.number= number_with_precision(@member.bislf, :precision => 2)
    %tr
      %th.right Situational LF
      %td.number= number_with_precision(@member.sitlf, :precision => 2)