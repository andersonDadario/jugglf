:javascript
  $(document).ready(function() {
    sortWishlistTable();
    $('.help').tooltip({ showURL: false });
    
    // Change normal 'Edit' links into XHR functions
    wishlistEditLinks();
  });
%table#wishlists.ipb_table.tablesorter
  %thead
    %tr
      %th.icon &nbsp;
      %th Item
      %th Priority
      %th Note
      %th Slot
      %th.image &nbsp;
  %tbody#wishlist
    - @wishlists.each do |wishlist|
      = render :partial => "wishlist_row", :object => wishlist, :locals => { :recent_loots => @recent_loots }
%br
#wishlist_form{ :style => "display: none" }= render :partial => 'form'
#wishlist_form_toggle
  %fieldset.submit= link_to('Add New Entry', new_member_wishlist_path(@member), :class => 'input_submit')