%h2
  = link_to 'Raids', raids_path
  &raquo;
  New
%fieldset
  - form_for @raid do |f|
    = f.error_messages
    
    %p
      = f.label :date, "Date"
      = date_select(:raid, :date)
    %p
      = f.label :note, "Note"
      %br
      = f.text_field :note
    %p
      = f.label :attendance_output, "Attendance"
      %br
      = f.text_area :attendance_output, :size => "62x30"
    %p
      = f.label :loot_output, "Loot"
      %br
      = f.text_area :loot_output, :size => "62x30"
    
    = f.submit