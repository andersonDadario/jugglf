= will_paginate @raids
%br
%table.list
  %thead
    %tr
      %th.date Date
      %th.number Attendees
      %th.number Loots
      %th.note Note
      - if admin?
        %th.image Actions
  %tbody
    - @raids.each do |raid|
      %tr{ :class => cycle('even', 'odd') }
        %td.date= link_to h(raid.date), raid_path(raid)
        %td.number= h(raid.attendees.size)
        %td.number= h(raid.loots.size)
        %td.note= h(raid.note)
        - if admin?
          %td.image
            = link_to image_tag('edit.png'), edit_raid_path(raid)
            = link_to image_tag('delete.png'), raid_path(raid), :confirm => 'Are you sure?', :method => :delete
%br
= will_paginate @raids