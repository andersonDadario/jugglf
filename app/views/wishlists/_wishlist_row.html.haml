%tr{ :class => cycle('even', 'odd') }[wishlist_row]
  %td.icon= image_tag(wishlist_row.item.wowhead_icon(:small), :alt => 'Icon') unless wishlist_row.item_id.nil?
  %td.item
    = warn_if_recently_looted(wishlist_row, recent_loots) if defined? recent_loots
    = link_to_item_with_stats(wishlist_row.item) unless wishlist_row.item_id.nil?
    - if wishlist_row.item_id.present? and wishlist_row.item.heroic?
      %span (Heroic)
  %td= h(wishlist_row.priority.titlecase)
  %td= truncate(h(wishlist_row.note), :length => 80)
  %td= h(wishlist_row.item.slot) unless wishlist_row.item_id.nil?
  %td.image{ :width => "48px" }
    = link_to_function(image_tag('edit.png'), "wishlistEditForm('#{edit_member_wishlist_path(@member, wishlist_row)}')")
    = link_to_remote_delete(wishlist_row, :url => member_wishlist_path(@member, wishlist_row))